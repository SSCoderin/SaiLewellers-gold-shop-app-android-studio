<!-- res/layout/your_item_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#FEFEFE"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ImageView for the image -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitXY" />

    <!-- Vertical LinearLayout for text views -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#FFF59D"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <!-- TextView 1 -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- TextView 2 -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Sai Jewellers (Pethwadaj)"
            android:textColor="#F31919" />
    </LinearLayout>

    <!-- Vertical LinearLayout for the price -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#FFF59D"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TextView for the price -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="Price"
            android:textColor="#0DC115" />
    </LinearLayout>

</LinearLayout>

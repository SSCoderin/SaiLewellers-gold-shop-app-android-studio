<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaiJewellers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">#000000</item> <!-- Set the text color to black -->

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SaiJewellers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SaiJewellers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SaiJewellers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- res/values/styles.xml -->
    <!-- res/values/styles.xml -->
    <style name="SpinnerDropDownStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">#FFFFFF</item> <!-- Default: White background color -->
    </style>

    <style name="SpinnerDropDownStyle.Dark" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">#FFE082</item> <!-- Dark theme: Black background color -->
    </style>


</resources>